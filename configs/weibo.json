  "learning_rate": 1e-3,
  "weight_decay": 0.1,
  "clip_grad_norm": 5.0,

  "bert_name": "../model/bert-base-chinese",
  "bert_learning_rate": 1e-5,
  "warm_factor": 0.2,

  "use_bert_last_4_layers": true,
  "seed": 123

