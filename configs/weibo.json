{
  "dataset": "weibo-zh",
  "save_path": "model-weibo.pt",
  "predict_path": "output.json",
  "dist_emb_size": 20,
  "type_emb_size": 20,
  "lstm_hid_size": 512,
  "conv_hid_size": 64,
  "bert_hid_size": 768,
  "biaffine_size": 512,
